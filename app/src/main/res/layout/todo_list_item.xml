<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/activity_background"
    android:scrollbars="none"
    android:padding="10dp">
<!--    android:paddingStart="10dp"-->
<!--    android:paddingEnd="0dp"-->
    <ImageView
        android:id="@+id/item_priority_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/green_circule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/green_circule_outline"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="TODO" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_priority_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           android:layout_marginStart="20dp"
            android:background="@drawable/white_round_conor_background"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/to_do_list_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/todo_item_time"
                tools:text="My Work Shedule"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:fontFamily="@font/product_sans_bold"
                />

            <TextView
                android:id="@+id/tag_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/to_do_list_item_title"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/product_sans_regular"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                app:drawableTint="@color/light_gray"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/tag_icon_48"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/todo_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/to_do_list_item_title"
                tools:text="10.00 am"
                android:padding="5dp"
                android:fontFamily="@font/product_sans_regular"
                />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tag_txt"
                app:layout_constraintStart_toStartOf="@id/to_do_list_item_title"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="this is a test to do list for testtinf here"
                android:textSize="13sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="0dp"
                android:fontFamily="@font/product_sans_regular"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


