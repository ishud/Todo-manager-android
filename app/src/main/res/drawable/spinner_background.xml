<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/input_background" android:startColor="@color/input_background" android:type="linear" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="5dp" android:bottom="5dp" android:top="5dp" >

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_drop_dawn" android:tint="@color/black_shade_1"/>

            </item>

        </layer-list>

    </item>


</selector>