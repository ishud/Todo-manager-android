<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beetalab.stickynote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".config.StickyNoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AboutActivity"
            android:exported="true" />
        <!-- <activity android:name=".activity.StartActiviy"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->
        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity
            android:name=".activity.PremiumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_full_screen" />
        <activity
            android:name=".activity.DetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_whiteStatusbar" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddTodoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_whiteStatusbar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".activity.AddTagActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_whiteStatusbar" />
        <activity
            android:name=".activity.AddNoteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_whiteStatusbar" />
        <activity
            android:name=".activity.ToDoWithTagActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".service.NotifyUserservice"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7465387162062313~6615840934" />
    </application>

</manifest>